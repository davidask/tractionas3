E:String = "tweenResume";		private var _value:Number;
		private var _timeProgress:Number;
		private var _easeProgress:Number;
		/**		 * Creates a new TweenEvent object.		 */		public function TweenEvent(type:String, value:Number, easeProgress:Number, timeProgress:Number, bubbles:Boolean = false, cancelable:Boolean = false)		{			super(type, bubbles, cancelable);						_value = value;						_timeProgress = timeProgress;						_easeProgress = easeProgress;		}
		/**		 * Indicates the value of the Tween.		 */		public function get value():Number		{			return _value;		}
		/**		 * Indicates the progress of the Tween.		 */		public function get progress():Number		{			return _timeProgress;		}		/**		 * Indicates the ease progress of the Tween.		 */
		public function get easeProgress():Number		{			return _easeProgress;		}
		/**		 * @inheritDoc		 */		override public function clone():Event		{			return new TweenEvent(type, value, progress, easeProgress, bubbles, cancelable);		}	}}