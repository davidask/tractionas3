	break;				}			}		}		/**		 * Specifies the cursor style.		 * 		 * @see #OSX_CURSOR		 * @see #WINDOWS_CURSOR		 */		public function get cursorStyle():String		{			return _cursorStyle;		}		public function set cursorStyle(value:String):void		{			switch(value)			{				case OSX_CURSOR:									drawOSXCursor();										break;								case WINDOWS_CURSOR:									drawWindowsCursor();										break;			}		}		private function drawOSXCursor():void		{			graphics.clear();			graphics.lineStyle(1, 0xFFFFFF, 1, true);			graphics.beginFill(0x000000);			graphics.moveTo(0, 0);			graphics.lineTo(10, 10);			graphics.lineTo(6, 10);			graphics.lineTo(8, 15);			graphics.lineTo(6, 16);			graphics.lineTo(3, 11);			graphics.lineTo(0, 14);			graphics.lineTo(0, 0);			graphics.endFill();						filters = [new DropShadowFilter(1, 45, 0x000000, 0.5, 2, 2, 1)];		}		private function drawWindowsCursor():void		{			return; //TODO Implement windows style cursor		}	}}